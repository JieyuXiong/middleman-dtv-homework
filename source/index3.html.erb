---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li class="blog_body">
      <h3 class="blog_title"><%= link_to article.title, article %></h3>
      <h5 class="blog_date"><%= article.date.strftime('%b %e') %></h5>
      <!-- responsive? -->
      <p class="summary-large-screen">
        <%= article.summary(550, ' ...') %>
      </p>
      <p class="summary-small-screen">
      <%= article.metadata[:page]['index-intro'] %>
      </p>
    </li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

